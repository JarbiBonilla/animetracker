<!doctype hmtml>

<html>
  
<h1>Edit Your Show Here!</h1>

<form method="POST" action="/shows/<%=@show.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= @show.title %>">
  <label for="rating">Rating:</label>
  <input type="text" name="rating" value="<%= @show.rating %>">
  <label for="streaming_service">Streaming Service:</label>
  <input type="text" name="streaming_service" value="<%= @show.streaming_service %>">
  <label for="review">Review:</label>
  <input type="text" name="review" value="<%= @show.review %>">
  <input type="submit" value="submit">
</form>

</html>
